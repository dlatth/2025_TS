{
  "compilerOptions": {
    "target": "es5", // 컴파일 후의 JS 버전
    "module": "commonjs", // 모듈 시스템
    "strict": true, // TS의 기본적인 체크를 모두 true로 하는지
    "esModuleInterop": true, // import문을 사용하여 import하게 하는지
    "skipLibCheck": true, // 외부 라이브러리 체크 여부
    "forceConsistentCasingInFileNames": true, // 파일명에서 대소문자 구별하는지
    "allowJs": true,
    "jsx": "preserve",
    "lib": ["ES2016", "DOM"],
    "outDir": "./dist",
    "baseUrl": "./src"
  }
}
